<MainScreen>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: "60dp"
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10]

        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Дохід (місяць)"
                color: 0.7, 0.7, 0.7, 1
            Label:
                id: monthly_income
                text: "0.00 грн."
                bold: True
                color: 0, 1, 0, 1

        BoxLayout:
            orientation: "vertical"
            Label:
                text: "Витрати (місяць)"
                color: 0.7, 0.7, 0.7, 1
            Label:
                id: monthly_expense
                text: "0.00 грн."
                bold: True
                color: 1, 0, 0, 1

    TextInput:
        id: amount_input
        hint_text: "Введіть суму"
        size_hint_y: None
        height: "36dp"
        font_size: "20sp"
        multiline: False

    BoxLayout:
        size_hint_y: None
        height: "60dp"
        spacing: 10
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10]

        BoxLayout:
            orientation: "horizontal"
            spacing: 5

            CheckBox:
                id: chk_expense
                size_hint_x: None
                width: "40dp"
                group: "type"
                active: True
            Label:
                text: "Витрата"
                text_size: self.size
                halign: 'left'
                valign: 'middle'

        BoxLayout:
            orientation: "horizontal"
            spacing: 5

            CheckBox:
                id: chk_income
                size_hint_x: None
                width: "40dp"
                group: "type"
            Label:
                text: "Дохід"
                text_size: self.size
                halign: 'left'
                valign: 'middle'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: "60dp"

        Button:
            text: "Зберегти"
            size_hint_y: None
            height: 50
            on_press: root.save_data()

    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 3
            size_hint_y: None
            height: "40dp"
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Дата"
                bold: True
            Label:
                text: "Тип"
                bold: True
            Label:
                text: "Сума"
                bold: True

        ScrollView:
            GridLayout:
                id: container
                cols: 3
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "30dp"
                row_force_default: True
